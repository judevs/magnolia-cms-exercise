  <build>
    <plugins>
      <plugin>
        <groupId>io.fabric8</groupId>
        <artifactId>docker-maven-plugin</artifactId>
        <configuration>
          <images>
            <image>
              <run>
                <volumes>
                  <bind>
                    <volume>${project.basedir}/mounted-config:/var/magnolia/config</volume>
                  </bind>
                </volumes>
              </run>
            </image>
          </images>
          <removeVolumes>true</removeVolumes>
        </configuration>
      </plugin>
      
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <!-- inhibit default-assembly! -->
          <execution>
            <id>default-assembly</id>
            <configuration>
              <skipAssembly>true</skipAssembly>
            </configuration>
          </execution>
          
          <!-- produce an "overlay" war that can be consummed by projects extending this one -->
          <execution>
            <id>overlay-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptorRefs>
                <descriptorRef>overlay-assembly-descriptor</descriptorRef>
              </descriptorRefs>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  

